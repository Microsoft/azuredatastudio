{
	"rulesDirectory": [
		"build/lib/tslint"
	],
	"rules": {
		"double-quoted-string-arg": [
			true,
			{
				"signatures": [
					"localize",
					"nls.localize"
				],
				"argIndex": 1
			}
		],
		"no-floating-promises":{
			"severity": "warn"
		}
	},
	"linterOptions": {
		"exclude": ["src/vs/**/*.ts"]
	}
}
